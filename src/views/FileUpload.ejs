<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/formulario_adjuntos.css">
    <title>Subir peliculas</title>
</head>
<body>

<div id="contenedor">
    <h1>Subir peliculas</h1>

    <form action="/upload" method="post" enctype="multipart/form-data" autocomplete="off">

        <div id="titulo_pelicula">
            <label for="titulo_pelicula">titulo pelicula</label>
            <input type="text" name="titulo" required>
        </div>

        <div id="file_image">
            <label for="file_image">Cargar imagen</label>
            <input type="file" id="file_image" name="image" required>
        </div>

        <div id="file_video">
            <label for="file_video">Cargar video</label>
            <input type="file" id="file_video" name="video" required>
        </div>


        <div id="genero">
            <label for="file_video">Genero</label>
            <select name="genero" id="" required>
                <option value="0">Seleccione</option>
                <% generos.forEach(function(value, index){ %>
                    <option value="<%= value.cod_genero %>"><%= value.genero %></option>
                <% }) %>
            </select>
        </div>


        <div id="sinopsis">
            <label for="sinopsis">sinapsis</label>
            <textarea name="sinopsis" cols="30" rows="10" required></textarea>
        </div>

        <button id="adjuntar">
            Adjuntar
        </button>
    </form>
</div>
</body>
</html>
